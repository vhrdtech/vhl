delimiter = { "\\\\(" | "\\\\)" | "\\\\{" | "\\\\}" | "\\\\[" | "\\\\]" }

dec_lit_raw = @{ ASCII_DIGIT ~ (ASCII_DIGIT | "_")* }
literal = { dec_lit_raw }

